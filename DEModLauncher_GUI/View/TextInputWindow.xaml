<Window x:Class="DEModLauncher_GUI.View.TextInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEModLauncher_GUI.View"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="输入模组名" Height="40" Width="350">
    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="_inputText" x:FieldModifier="private" Grid.Column="0"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                 FontSize="14"/>
            <Button Grid.Column="1" Content="确定" Style="{StaticResource GButton}" 
                BorderThickness="0" Click="Ok_Click"/>
        </Grid>
    </Border>
</Window>
