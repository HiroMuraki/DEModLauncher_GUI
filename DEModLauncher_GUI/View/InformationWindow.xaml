<Window x:Class="DEModLauncher_GUI.View.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEModLauncher_GUI.View"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="{Binding Caption,Mode=OneWay}" Height="480" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="_message" x:FieldModifier="private" 
                     FontSize="14" Padding="10" FontFamily="Consolas"
                     IsReadOnly="True" BorderThickness="0">
            </TextBox>
        </ScrollViewer>
    </Grid>
</Window>
