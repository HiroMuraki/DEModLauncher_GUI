<Window x:Class="DEModLauncher_GUI.View.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEModLauncher_GUI.View"
        mc:Ignorable="d" x:Name="Self"
        DataContext="{Binding ElementName=Self}"
        Title="{Binding Caption,Mode=OneWay}" Height="350" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="_message" FontSize="14" Padding="5" FontFamily="Consolas"
                 x:FieldModifier="private" IsReadOnly="True">
            </TextBox>
        </ScrollViewer>
    </Grid>
</Window>
