<Window x:Class="DEModLauncher_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:DEModLauncher_GUI.ViewModel"
        mc:Ignorable="d" x:Name="Self"
        DataContext="{Binding ElementName=Self,Path=DEModManager}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Title="MainWindow" Height="400" Width="640">
    <WindowChrome.WindowChrome>
        <WindowChrome UseAeroCaptionButtons="False" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderBrush="Gold" BorderThickness="2">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.35*"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="0.65*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Image Source="/DEModLauncher_GUI;component/Resources/Images/header2.jpg" Stretch="UniformToFill"
                           MouseLeftButtonDown="Window_Move"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding DEModPacks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type ViewModel:DEModPack}">
                                        <Grid Height="35">
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Tag="{Binding}" Header="重命名" Click="RenameMod_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="上移" Click="MoveUpMod_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="下移" Click="MoveDownMod_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="复制" Click="DuplicateMod_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="删除" Click="DeleteMod_Click"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                            <Button Content="{Binding PackName}" ToolTip="{Binding PackName}"
                                                    FontSize="14" BorderThickness="0,0,0,1"
                                                    Tag="{Binding}" 
                                                    Click="SelectMod_Click">
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>

                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button Grid.Column="1" Content="+" FontSize="14" Padding="0" ToolTip="添加模组" 
                            Width="25" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            BorderThickness="0,1,1,0" Background="Gold"
                            Click="AddMod_Click"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Background="Black"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Content="{Binding CurrentMod.PackName}" FontSize="20" BorderThickness="0,0,0,1" BorderBrush="Black"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                           MouseLeftButtonDown="Window_Move"/>
                        <Button Content="X" FontSize="18" Width="40" Height="40" HorizontalAlignment="Right"
                            Background="Transparent" BorderThickness="0"
                            Click="Window_Close"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding CurrentMod.Resources}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type ViewModel:DEModPack}">
                                        <Grid Height="25">
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Tag="{Binding}" Header="上移" Click="MoveUpResource_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="下移" Click="MoveDownResource_Click"/>
                                                    <MenuItem Tag="{Binding}" Header="删除" Click="DeleteResource_Click"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                            <Label Content="{Binding}" ToolTip="{Binding}" FontSize="12" Padding="20,0"
                                                   BorderThickness="0,0,0,1"
                                                   HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                                                <Label.Style>
                                                    <Style TargetType="Label">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="Gold" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Label.Style>
                                            </Label>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>

                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Button Content="+" Height="25" Width="25" Padding="0" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Left"
                            BorderThickness="0,1,1,0" Background="Gold"
                            FontSize="14" ToolTip="添加文件" Click="AddResource_Click"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="游戏文件夹: " Width="80" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                           BorderThickness="0,1,0,0" BorderBrush="Black"/>
                        <TextBox Grid.Column="1" Text="{Binding GameDirectory,Mode=OneWay}" ToolTip="{Binding GameDirectory}" IsReadOnly="True" 
                             VerticalContentAlignment="Center" BorderThickness="0,1,0,0" BorderBrush="Black"/>
                        <Button Grid.Column="2" Content="选择文件夹" Width="80" Click="SelectGameDirectory_Click"
                            BorderThickness="1,1,0,0"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="保存" ToolTip="保存模组配置" FontSize="14" Width="80" Grid.Column="0" 
                        BorderThickness="0,1,0,1" BorderBrush="Black"
                        Click="SaveToFile_Click"/>
                    <Button Content="重新读取" ToolTip="重新读取模组包配置" FontSize="14" Width="80" Grid.Column="1" 
                        BorderBrush="Black"
                        Click="LoadFromFile_Click"/>
                    <Button Content="加载并启动" ToolTip="加载并启动模组" FontSize="14" Grid.Column="2" 
                        BorderThickness="0,1,0,1" BorderBrush="Black"
                        Click="LaunchMod_Click"/>
                </Grid>
            </Grid>
            <Grid Grid.RowSpan="2" Opacity="0">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLaunching}" Value="True">
                                <Setter Property="Opacity" Value="1" />
                                <Setter Property="IsHitTestVisible" Value="True" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsLaunching}" Value="False">
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="IsHitTestVisible" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <ScrollViewer x:Name="StandardOutPutHandlerArea">
                    <TextBox x:Name="StandardOutPutHandler" Foreground="White" Background="Black" Opacity="0.85"
                         BorderThickness="0" FontSize="12" Padding="50,30" IsReadOnly="True" 
                         MouseLeftButtonDown="Window_Move"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
